<div class="container">
  <%provide(:title, 'Comments')%>
  <div class="create-wrapper card pt-4 fs-5">
	  <%=form_for [@user, @activity, @new_comment] do |f|%>
      <div class="form-group mb-3">
        <%= f.label :body, "Your comment:", class: "sr-only" %>
        <%= f.text_area :body, class: "form-control",rows: "4", placeholder: "Type your comment here...", required: true%>
	    </div>
      <div class="form-group button">
        <%=f.submit "Send", class: "btn btn-primary px-4"%>
			</div>
    <%end%>
  </div>
</div>