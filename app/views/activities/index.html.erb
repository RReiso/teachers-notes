
<div class="create-activity-heading mt-2 mt-ms-4">
  <%if is_current_user%>
			<h1 class=" pt-3 pt-sm-5 text-uppercase fs-2 fw-bold">My activities</h1>
      </div>
			
      
      <%else%>
      
      <h1 class=" pt-3 pt-sm-5 text-uppercase fs-2 fw-bold"><span><%=@user.name%>'s </span>activities</h1>
       </div>
      <p class="text-center lead pb-2 mb-4">Explore activities created by <span><%=link_to @user.name, user_activities_path(@user), class: "user-name"%></span></p>
  <%end%>

<section id="gallery">
  <div class="container">
    <div class="row">

    <%@activities.each  do |activity|%>
    <div class="col-lg-6 mb-4">
    <div class="mt-2 card bg-light print">
      <div class="card-body">
      <div class="activity-heading">
      <%=image_tag("pencil.png", class: "card-icon", alt: "Pencil icon")%>
        <h5 class="card-title"><%=activity.title%></h5>
        </div>
        <hr>
        <p class="categories">
        <%# splitting the category string by commas %>
        <%activity.category.split(",").each do |categ|%>
          <span class="category"><%=categ%></span>
        <%end%>
        </p>
        <p class=" text-justify"><%=activity.description%></p>
        <p >Posted by:
         <%# methods in application_controller: %>
        <%=link_to get_user(activity).name, user_activities_path(get_user(activity)), class: "user-name"%>
        </p>
        <%if is_author(activity)%>
        <%=link_to "Edit", edit_user_activity_path(@user, activity), class: "btn btn-secondary btn-sm"%>
        <%=link_to "Delete", user_activity_path(@user, activity), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm"%>
        <%end%>
        <hr>
        <p class="activity-cta text-center ">Tried this activity? Leave a comment and share your experience!</p>
        <div class="user-action-buttons">
       <%=link_to "Comments", user_activity_comments_path(get_user(activity), activity), class: "btn btn-primary btn-sm"%>
       <%if !logged_in_user%>
        <span data-bs-toggle="tooltip" data-bs-placement="bottom" title="Log in to like"><i class=" heart_icon fas fa-heart fa-2x"  ></i></span>
        <%else%>
        <i class=" heart_icon fas fa-heart fa-2x"  data-activity-id=<%=activity.id%>></i>
        <%end%>
        <span id="heart-count-<%=activity.id%>"><%=activity.heart_count%></span>
        <a data-pin-do="buttonBookmark" data-pin-tall="true" href="https://www.pinterest.com/pin/create/button/"></a>
        <button class="print-button " onclick="window.print();return false;"><span class="print-icon"></button> 
        </div>
      </div>
     </div>
    </div>
    
     <%end%>
    </div>
    </div>
    </section>